<args format='1.0' scope='/root/world//* /root/world'>
	<group name='imagineStatements' hideTitle='True' closed='False'>
		<page name="geometry">
			<float name="crease_angle" default="0.8" help="Limit angle to use when calculating smooth per-vertex normals for meshes. Adjacent faces with normals above this value (dot product of the two normals) will be averaged."/>
			<int name="subdiv_levels" default="1"/>
			<int name="flip_faces" default="0" widget='checkBox'/>
		</page>


		<group name="visibility">
			<int name="camera" default="1" widget='checkBox'/>
			<int name="shadow" default="1" widget='checkBox'/>
			<int name="diffuse" default="1" widget='checkBox'/>
			<int name="glossy" default="1" widget='checkBox'/>
			<int name="reflection" default="1" widget='checkBox'/>
			<int name="refraction" default="1" widget='checkBox'/>
		</group>
	</group>
</args>
