<args format='1.0' scope='/root' fixedCEL='/root' >
	<group name='imagineGlobalStatements' hideTitle='True' widget='pagedargs' closed='False' groupinherit='False'>
		<page name='general' open="True">
			<int name="integrator" widget="mapper" default="1">
				<hintdict name='options'>
					<int name="direct_illumination" value="0"/>
					<int name="path" value="1"/>
					<int name="path_distributed" value="2"/>
				</hintdict>
			</int>
			<int name="enable_volumetrics" default="0" widget="checkbox"/>
			<int name="spp" default="64" help="The number of samples per pixel"/>
			<int name="reconstruction_filter" widget="mapper" default="0">
				<hintdict name='options'>
					<int name="box" value="0"/>
					<int name="triangle" value="1"/>
					<int name="gaussian" value="2"/>
					<int name="mitchell_netravali" value="3"/>
					<int name="blackman_harris" value="4"/>
					<int name="catmull-rom" value="5"/>
					<int name="lanczos-sync" value="6"/>
				</hintdict>
			</int>

			<int name="path_dist_diffuse_multiplier" default="3" help="Diffuse ray multiplier for the PathDistributed integrator"/>
			<int name="path_dist_glossy_multiplier" default="2" help= "Glossy ray multiplier for the PathDistributed integrator"/>
		</page>
		<page name='light_paths' open="True">
			<int name="max_depth_overall" default="4" help=""/>
			<int name="max_depth_diffuse" default="3" help=""/>
			<int name="max_depth_glossy" default="3" help=""/>
			<int name="max_depth_reflection" default="5" help=""/>
			<int name="max_depth_refraction" default="5" help=""/>
		</page>
		<page name='scene' open="True">
			<int name="bake_down_scene" default="1" widget="checkbox"/>
			<int name="use_compact_geometry" default="1" widget="checkbox"/>
			<float name="ray_epsilon" default="0.001"/>
		</page>

		<page name='advanced' open="False">
			<int name="print_statistics" default="0" widget="checkbox"/>
			<int name="bucket_size" widget="mapper" default="16">
				<hintdict name='options'>
					<int name="16" value="16"/>
					<int name="32" value="32"/>
					<int name="48" value="48"/>
					<int name="64" value="64"/>
					<int name="96" value="96"/>
				</hintdict>
			</int>
			<int name="bucket_order" widget="mapper" default="2">
				<hintdict name='options'>
					<int name="rows" value="0"/>
					<int name="rows_bounce" value="1"/>
					<int name="spiral" value="2"/>
					<int name="spread" value="3"/>
					<int name="hilbert" value="4"/>
				</hintdict>
			</int>
		</page>
	</group>
</args>

